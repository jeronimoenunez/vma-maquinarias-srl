---
import Container from "@/ui/components/Container.astro";
import { news } from "@/data/news";

const {
  kicker = "ECOSISTEMA VMA",
  title = "Ecosistema",
  subtitle = "Entregas ¬∑ Seguridad ¬∑ Flota",
} = Astro.props;

const fmt = (iso: string) => {
  const [y, m, d] = iso.split("-");
  return `${d}/${m}/${y}`;
};
---

<section class="vmaNews" aria-label="Ecosistema VMA">
  <!-- HEADER alineado al Container (como lo quer√©s ‚Äútal cual‚Äù) -->
  <Container>
    <header class="vmaNews__head">
      <div class="vmaNews__kicker">{kicker}</div>
      <h2 class="vmaNews__title">{title}</h2>
      <p class="vmaNews__sub">{subtitle}</p>
    </header>
  </Container>

  <!-- CARRUSEL full-bleed (punta a punta) -->
  <div class="vmaNews__bleed">
    <div class="vmaNews__wrap">
      <div class="vmaNews__rail" id="vmaNewsRail">
        {news.map((n) => (
          <a class="vmaNews__item" href={n.href} aria-label={n.title}>
            {n.image ? (
              <img class="vmaNews__img" src={n.image} alt={n.title} loading="lazy" />
            ) : (
              <div class="vmaNews__img vmaNews__img--fallback" aria-hidden="true"></div>
            )}

            <div class="vmaNews__overlay">
              <div class="vmaNews__meta">
                <span class="vmaNews__tag">{n.tag ?? "Novedad"}</span>
                <span class="vmaNews__date">{fmt(n.date)}</span>
              </div>

              <h3 class="vmaNews__h3">{n.title}</h3>
              {n.excerpt && <p class="vmaNews__ex">{n.excerpt}</p>}
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>

  <script is:inline>
    (() => {
      const rail = document.getElementById("vmaNewsRail");
      if (!rail) return;

      // Loop infinito
      rail.innerHTML += rail.innerHTML;

      let x = 0;
      const speed = 0.35;
      let paused = false;

      function tick() {
        if (!paused) {
          x += speed;
          const half = rail.scrollWidth / 2;
          if (x >= half) x = 0;
          rail.style.transform = `translateX(${-x}px)`;
        }
        requestAnimationFrame(tick);
      }

      requestAnimationFrame(tick);

      // Pausa SOLO al hover en card
      const bindHover = () => {
        const items = Array.from(rail.querySelectorAll(".vmaNews__item"));
        items.forEach((item) => {
          item.addEventListener("pointerenter", () => (paused = true));
          item.addEventListener("pointerleave", () => (paused = false));
        });
      };
      bindHover();
    })();
  </script>
</section>

<style>
/* Secci√≥n con ‚Äúcuerpo‚Äù */
.vmaNews{
  padding: 96px 0;
  position: relative;
}
.vmaNews *{ box-sizing: border-box; }

.vmaNews__head{ margin-bottom: 18px; }
.vmaNews__kicker{
  font-size: 12px;
  letter-spacing: .18em;
  text-transform: uppercase;
  color: rgba(234,242,247,.70);
}
.vmaNews__title{
  margin: 6px 0 6px;
  font-size: 30px;
  line-height: 1.1;
}
.vmaNews__sub{
  margin: 0;
  font-size: 14px;
  color: rgba(234,242,247,.70);
}

/* Full-bleed real */
.vmaNews__bleed{
  width: 100vw;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

/* Wrapper del carrusel: ocultamos overflow y damos gutters internos */
.vmaNews__wrap{
  overflow: hidden;
  padding: 0 24px; /* üëà ‚Äúaire‚Äù contra los bordes del viewport */
}

/* Rail */
.vmaNews__rail{
  display: flex;
  gap: 24px;
  padding-top: 10px;
  will-change: transform;
}

/* Cards */
.vmaNews__item{
  flex: 0 0 360px;
  height: 440px;
  border-radius: 18px;
  background: rgba(16,46,63,.6);
  border: 1px solid var(--line);
  overflow: hidden;
  position: relative;
  text-decoration: none;
  color: inherit;
}

.vmaNews__img{
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  opacity: .92;
}
.vmaNews__img--fallback{
  position:absolute;
  inset:0;
  background:
    radial-gradient(800px 400px at 30% 20%, rgba(242,178,51,.18), transparent 60%),
    linear-gradient(135deg, rgba(255,255,255,.08), rgba(255,255,255,.02));
}

.vmaNews__overlay{
  position:absolute;
  inset:auto 0 0 0;
  padding:16px;
  background: linear-gradient(to top, rgba(0,0,0,.8), transparent);
}

.vmaNews__meta{
  display:flex;
  justify-content:space-between;
  align-items:center;
  gap:10px;
  margin-bottom:8px;
  font-size:12px;
  color: rgba(234,242,247,.78);
}

.vmaNews__tag{
  display:inline-flex;
  padding:4px 10px;
  border-radius:999px;
  border:1px solid rgba(234,242,247,.14);
  background: rgba(0,0,0,.35);
  font-weight:600;
}

.vmaNews__h3{
  margin:0;
  font-size:16px;
  line-height:1.2;
  color: rgba(234,242,247,.95);
}

.vmaNews__ex{
  margin:6px 0 0;
  font-size:12.5px;
  line-height:1.35;
  color: rgba(234,242,247,.75);
  max-width:46ch;
}

/* Divider suave arriba (opcional) */
.vmaNews::before{
  content:"";
  position:absolute;
  left:0;
  right:0;
  top:0;
  height:1px;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(234,242,247,.10) 20%,
    rgba(242,178,51,.18) 50%,
    rgba(234,242,247,.10) 80%,
    transparent 100%
  );
  opacity: .9;
}

.contactTitle,
.contacto h2,
#contacto h2 {
  font-size: clamp(28px, 3vw, 40px);
  font-weight: 700;
}


@media (max-width: 900px){
  .vmaNews{ padding: 72px 0; }
  .vmaNews__wrap{ padding: 0 16px; }
  .vmaNews__item{ flex-basis: 78vw; }
}
</style>
